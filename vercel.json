{
  "version": 2,
  "public": true,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/((?!api/).*)", "destination": "/frontend/dist/$1" },
    { "source": "/((?!api/).*)", "destination": "/frontend/dist/index.html" }
  ],
  "functions": {
    "api/index.ts": {
      "includeFiles": "backend/src/**"
    }
  },
  "crons": [
    {
      "path": "/api/cron/reminders",
      "schedule": "0 18 * * *"
    }
  ]
}
